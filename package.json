{

  "name": "@technologiestiftung/qtrees-backend",

  "description": "Backend / API of Qtrees",

  "version": "1.0.0",

  "author": "ff6347 <hash@ff6347.email>",

  "license": "MIT",

  "scripts": {

    "test": "jest",

    "test:ci": "jest --runInBand --forceExit",

    "prebuild": "rimraf dist",

    "postbuild": "tsc --noEmit --project tsconfig.build.json",

    "build": "node esbuild.config.js",

    "dev": "nodemon",

    "generate:definitions": "node -r dotenv/config -r ts-node/register src/scripts/generate-definitions.ts",

    "commit": "cz"

  },

  "repository": {

    "type": "git",

    "url": "git+https://github.com/technologiestiftung/qtrees-backend.git"

  },

  "keywords": [

    "supabase",

    "qtrees",

    "technologiestiftung"

  ],

  "bugs": {

    "url": "https://github.com/technologiestiftung/qtrees-backend/issues"

  },

  "homepage": "https://github.com/technologiestiftung/qtrees-backend#readme",

  "dependencies": {

    "@humanwhocodes/env": "2.2.0",

    "@supabase/supabase-js": "1.33.3",

    "fastify": "3.28.0",

    "fastify-auth": "1.1.0",

    "fastify-cors": "6.0.3",

    "fastify-jwt": "4.1.3",

    "fastify-sensible": "3.1.2",

    "fluent-json-schema": "3.1.0",

    "make-promises-safe": "5.1.0"

  },

  "devDependencies": {

    "@semantic-release/changelog": "6.0.1",

    "@semantic-release/commit-analyzer": "9.0.2",

    "@semantic-release/git": "10.0.1",

    "@semantic-release/npm": "9.0.1",

    "@semantic-release/release-notes-generator": "10.0.3",

    "@types/jest": "27.5.2",

    "@typescript-eslint/eslint-plugin": "5.30.6",

    "@typescript-eslint/parser": "5.30.6",

    "cz-conventional-changelog": "3.3.0",

    "dotenv": "16.0.1",

    "esbuild": "0.14.49",

    "eslint": "8.20.0",

    "eslint-config-prettier": "8.5.0",

    "eslint-plugin-jest": "26.6.0",

    "eslint-plugin-prettier": "4.2.1",

    "glob": "8.0.3",

    "jest": "28.1.3",

    "nodemon": "2.0.19",

    "openapi-typescript": "5.4.1",

    "prettier": "2.7.1",

    "rimraf": "3.0.2",

    "ts-node": "10.9.1",

    "typescript": "4.7.4"

  },

